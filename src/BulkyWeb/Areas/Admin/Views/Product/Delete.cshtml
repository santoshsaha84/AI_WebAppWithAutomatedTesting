@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
<form method="post">
    <div class="border p-4 mt-2">
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" disabled type="text" class="form-control border-0 shadow" />
                <label asp-for="Title" class="ms-2"></label>                
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" disabled type="text" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="ISBN" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="Author" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="ListPrice" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="Price" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="Price50" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" type="text" disabled class="form-control border-0 shadow" />
                <label asp-for="Price100" class="ms-2"></label>
            </div>

            
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control" asp-route="@Model.Id">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary border form-control">Back To List Page</a>
            </div>
        </div>


    </div>

</form>
</div>